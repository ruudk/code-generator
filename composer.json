{
    "name": "ruudk/code-generator",
    "description": "A library for generating beautiful PHP code with automatic namespace import management.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ruud Kamphuis",
            "email": "ruudk@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "erickskrauch/php-cs-fixer-custom-fixers": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.85",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.3",
        "ticketswap/phpstan-error-formatter": "^1.1",
        "captainhook/captainhook-phar": "^5.25"
    },
    "autoload": {
        "psr-4": {
            "Ruudk\\CodeGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ruudk\\CodeGenerator\\Hooks\\": "hooks/",
            "Ruudk\\CodeGenerator\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true,
            "captainhook/captainhook-phar": true
        }
    }
}
